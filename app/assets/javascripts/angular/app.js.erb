'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('rails-final', ['ngRoute', 'ng-token-auth']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('auth/signup.html') %>",
      controller: 'SignUpCtrl'
    }).
    when('/quizzes', {
      templateUrl: "<%= asset_path('quizzes/index.html') %>",
      controller: 'QuizzesIndexCtrl'
    }).
    when('/quizzes/:id', {
      templateUrl: "<%= asset_path('quizzes/show.html') %>",
      controller: 'QuizzesShowCtrl'
    }).
    when('/new_quizzes', {
      templateUrl: "<%= asset_path('quizzes/new.html') %>",
      controller: 'QuizzesNewCtrl'
    });

  $authProvider.configure([{
      // By default, you only need to configure apiUrl
      // Note that if you put a '/' at the end of the link, there will be errors when calling the api
      apiUrl: 'http://localhost:3000'
    },{
      user: {
        apiUrl:                  'http://localhost:3000',
        signOutUrl:              '/auth_user/sign_out',
        emailSignInPath:         '/auth_user/sign_in',
        emailRegistrationPath:   '/auth_user',
        confirmationSuccessUrl:  '/'
      }
    },{
      admin: {
        apiUrl:                  'http://localhost:3000',
        signOutUrl:              '/auth_admin/sign_out',
        emailSignInPath:         '/auth_admin/sign_in',
        emailRegistrationPath:   '/auth_admin',
        confirmationSuccessUrl:  '/'
      }
    }]);
}]);