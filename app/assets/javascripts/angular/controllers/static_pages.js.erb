// Note: you have to duplicate $scope in 2 places to make it work
app.controller('StaticPagesCtrl', ['$scope', '$auth', function($scope, $auth){
  $scope.logout = function () {
    $auth.signOut({config: 'user'}).then(function(resp) {
      console.log(resp);
    }).catch(function(resp) {
      console.log(resp);
    });
  };

  $scope.validateUser = function () {
    $auth.validateUser({config: 'user'}).then(function (resp) {
      console.log(resp);
    }).catch(function (resp) {
      console.log(resp);
    });
  }
}]);