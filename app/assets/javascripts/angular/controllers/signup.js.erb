app.controller('SignUpCtrl', ['$scope', '$auth', '$location', function($scope, $auth, $location){
  $scope.signup = function (configName) {
    $auth.submitRegistration($scope.registrationForm, { config: configName}).
     then(function(resp) {
       // handle success response
       console.log(resp);

       // redirect back to root when registration succesfull
       $location.path('/');
     }).
     catch(function(resp) {
       // handle error response
       console.log(resp);
     });
  };

}])