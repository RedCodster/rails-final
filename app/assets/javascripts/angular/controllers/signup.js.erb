app.controller('SignUpCtrl', ['$scope', '$auth', '$location', function($scope, $auth, $location){
  $scope.userMode = true;

  $scope.signup = function () {
    var configName = $scope.userMode ? 'user' : 'admin' ;

    $auth.submitRegistration($scope.registrationForm, { config: configName}).
     then(function(resp) {
       console.log(resp);

       $location.path('/');
     }).
     catch(function(resp) {
       console.log(resp);
     });
  };

  $scope.toggleMode = function (configName) {
    if (configName == 'admin') {
      $scope.userMode = false;
    } else {
      $scope.userMode = true;
    }
  };

}])